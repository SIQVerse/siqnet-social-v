# ✅ Django Core Settings
DJANGO_SETTINGS_MODULE=siqnet_backend.settings
SECRET_KEY=your-very-secure-secret-key
DEBUG=False
ALLOWED_HOSTS=siqnet.tech,www.siqnet.tech
CSRF_TRUSTED_ORIGINS=https://siqnet.tech,https://www.siqnet.tech

# ✅ PostgreSQL Database
DATABASE_URL=postgres://postgres:your-db-password@your-db-host:5432/siqnet

# ✅ Redis (for Channels, caching, async tasks)
REDIS_URL=redis://your-redis-host:6379

# ✅ Email Backend (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=SIQNet <noreply@siqnet.tech>

# ✅ Cloud Media Storage (optional: Cloudinary or AWS S3)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=siqnet-media
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=cdn.siqnet.tech

# ✅ CORS & Frontend Integration
DJANGO_CORS_ALLOWED_ORIGINS=https://siqnet.tech,https://www.siqnet.tech,https://app.siqnet.tech

# ✅ Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=Africa/Lusaka

# ✅ Security & Monitoring
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ✅ Analytics & Monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
